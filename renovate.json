{
    "baseBranches": [
        "master"
    ],
    "branchName": "renovate/ironbank",
    "configWarningReuseIssue": false,
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate: Upgrade images",
    "draftPR": true,
    "enabledManagers": [
        "custom.regex"
    ],
    "labels": [
        "kind::maintenance",
        "renovate",
        "team::pipelines",
        "status::ready-to-work"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ]
        },
        {
            "matchPackageNames": [
                "registry1.dso.mil/ironbank/opensource/kubernetes/kubectl"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "enabled": false
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/.*values\\.yaml$/"
            ],
            "matchStrings": [
                "repository:\\s*\"(registry1.dso.mil/ironbank/opensource/nginx/nginx)\"\\s*\\n\\s*pullPolicy:\\s*Always\\s*\\n\\s*tag:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
            ],
            "depNameTemplate": "registry1.dso.mil/ironbank/opensource/nginx/nginx",
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/.*/_waitjob\\.yaml$/",
                "/.*/_scriptrunner\\.yaml$/"
            ],
            "matchStrings": [
                "image:\\s*\\{\\{\\s*dig\\s*\"image\"\\s*\"(?<depName>registry1\\.dso\\.mil/ironbank/opensource/kubernetes/kubectl):(?<currentValue>v[0-9]+\\.[0-9]+(?:\\.[0-9]+)?)\""
            ],
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/.*/_cypressrunner\\.yaml$/"
            ],
            "matchStrings": [
                "image:\\s*[\"']?(?<depName>registry1\\.dso\\.mil/ironbank/big-bang/cypress):(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)[\"']?"
            ],
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "Chart.yaml"
            ],
            "matchStrings": [
                "-\\s*name:\\s*kubectl\\s*\\n\\s*image:\\s*(?<depName>registry1\\.dso\\.mil/ironbank/opensource/kubernetes/kubectl):(?<currentValue>v[\\d\\.]+)"
            ],
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "Chart.yaml"
            ],
            "matchStrings": [
                "-\\s*name:\\s*cypress\\s*\\n\\s*image:\\s*(?<depName>registry1\\.dso\\.mil/ironbank/big-bang/cypress):(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
            ],
            "datasourceTemplate": "docker"
        }
    ],
    "separateMajorMinor": false
}
